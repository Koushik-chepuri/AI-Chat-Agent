{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "ts-node": {
    "esm": true,
    "preferTsExts": true
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist"]
}
